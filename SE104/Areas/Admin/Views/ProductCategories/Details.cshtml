@model SE104.Models.TbProductCategory



@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-action="Index">Danh sách danh mục</a>
            <span class="breadcrumb-item active">Chi tiết</span>
        </nav>
    </div>
</div>
<div class="page-header no-gutters has-tab" asp-action="Details" asp-area="Admin" asp-controller="AdminProducts">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                <img src="@Model.Image" alt="">
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.CatName</h4>
            </div>
        </div>
        <div class="m-b-15">
            <a class="btn btn-success m-r-5" asp-area="Admin" asp-controller="ProductCategories" asp-action="Edit" asp-route-id="@Model.CatId">
                <i class="anticon anticon-edit"></i>
                <span>Sửa</span>
            </a>
            <a class="btn btn-success btn-tone m-r-5" asp-action="Index">Quay về</a>

        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-overview">Thông tin</a>
        </li>

    </ul>
</div>
<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-overview">

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>

                                <tr>
                                    <td>Danh mục:</td>
                                    <td>@Model.CatName</td>
                                </tr>

                                <tr>
                                    <td>Alias:</td>
                                    <td>@Model.Alias</td>
                                </tr>

                                <tr>
                                    <td>Trạng thái:</td>
                                    <td>
                                        @if (Model.Published)
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="badge badge-success badge-dot m-r-10"></div>
                                                <div>Còn hàng</div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="badge badge-danger badge-dot m-r-10"></div>
                                                <div>Hết hàng</div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Ngày tạo:</td>
                                    <td>@Model.CreatedDate</td>
                                </tr>
                                <tr>
                                    <td>Người tạo:</td>
                                    <td>@Model.CreatedBy</td>
                                </tr>
                                <tr>
                                    <td>Lần sửa đổi cuối cùng:</td>
                                    <td>@Model.DateModified</td>
                                </tr>
                               
                                <tr>
                                    <td>Ảnh:</td>
                                    <td>@Model.Image</td>

                                    <td colspan="2">
                                        <img src="@Url.Content(Model.Image)" height="300" />
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Mô tả</h4>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>

    </div>
</div>